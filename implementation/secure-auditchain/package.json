{
  "name": "secure-auditchain",
  "version": "1.0.0",
  "description": "Small-scale blockchain audit log demonstrating tamper-evident secure storage (SHA-256 chain + Ed25519 signatures)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "verify": "tsx src/cli.ts verify",
    "add": "tsx src/cli.ts add --message \"Test event\"",
    "print": "tsx src/cli.ts print",
    "tamper-demo": "tsx src/cli.ts tamper-demo",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "keywords": [
    "blockchain",
    "cybersecurity",
    "audit-log",
    "ed25519",
    "integrity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.8.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17"
  }
}
